<%- include('partials/top') -%>
<%- include('partials/alerts') -%>

    
    <section class="bg-[url('/images/bg.png')] text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-24">
            <div class="text-center">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6">Elevate Your Discourse</h1>
                <p class="text-xl md:text-2xl max-w-3xl mx-auto mb-10 text-primary-100">
                    A platform for thoughtful debate, motion generation, and intellectual exchange. Join a community dedicated to civil discourse.
                </p>
                <div class="flex flex-col sm:flex-row justify-center gap-4">
                    <a href="/gen" class="bg-white flex items-center justify-center text-primary-700 hover:bg-primary-50 h-14 px-8 font-semibold rounded-lg transition duration-150 ease-in-out shadow-lg">Generate Motion</a>
                    <a href="/join-us" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-primary-700 px-8 flex items-center justify-center h-14 rounded-lg font-medium transition duration-150 ease-in-out">Join Our Community</a>
                </div>
            </div>
        </div>
    </section>

    
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 mb-4">Our Core Features</h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">Designed to facilitate meaningful debate and intellectual growth</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                
                <div class="bg-white rounded-xl p-8 shadow-sm hover:shadow-md transition duration-300 ease-in-out border border-gray-100">
                    <div class="w-16 h-16 bg-primary-500 rounded-lg flex items-center justify-center mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-heading font-semibold text-gray-900 mb-4">Motion Generator</h3>
                    <p class="text-gray-600 mb-6">AI-powered tool that creates compelling debate topics across various categories, perfect for practice or competition.</p>
                    <a href="/gen" class="text-primary-600 font-medium hover:text-primary-700 inline-flex items-center">
                        Try it now
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </a>
                </div>

                
                <div class="bg-white rounded-xl p-8 shadow-sm hover:shadow-md transition duration-300 ease-in-out border border-gray-100">
                    <div class="w-16 h-16 bg-primary-500 rounded-lg flex items-center justify-center mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-heading font-semibold text-gray-900 mb-4">Debate Transcripts</h3>
                    <p class="text-gray-600 mb-6">Access a curated collection of debate transcripts from various competitions and formats to study and learn from.</p>
                    <a href="/transcript" class="text-primary-600 font-medium hover:text-primary-700 inline-flex items-center">
                        Browse transcripts
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </a>
                </div>

                
                <div class="bg-white rounded-xl p-8 shadow-sm hover:shadow-md transition duration-300 ease-in-out border border-gray-100">
                    <div class="w-16 h-16 bg-primary-500 rounded-lg flex items-center justify-center mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-heading font-semibold text-gray-900 mb-4">Motion Analysis</h3>
                    <p class="text-gray-600 mb-6">Deep insights into debate motions with argument breakdowns, key points, and strategic approaches for both sides.</p>
                    <a href="/motion" class="text-primary-600 font-medium hover:text-primary-700 inline-flex items-center">
                        Learn more
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </section>

    
<%- include('partials/bottom') -%>
