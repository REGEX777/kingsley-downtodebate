<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Create Motion Category - Admin Dashboard</title>
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-black text-white font-sans antialiased">

  <%- include('../../partials/alerts') -%>

  <div class="min-h-screen flex flex-col md:flex-row">

  <%- include('../_sidebar') -%>


    <!-- Main Content -->
    <main class="flex-1 p-8 space-y-8">

      <!-- Motion Form -->
      <section id="motions" class="bg-[#101828] p-6 rounded-2xl shadow-lg">
        <h2 class="text-xl font-semibold mb-6">Create Motion Category</h2>
        <form action="/admin/motion/create" method="post" id="motionForm" class="space-y-4">
          <div>
            <label class="block mb-1">Title</label>
            <input type="text" name="title"
                   class="w-full p-3 rounded-lg bg-black focus:outline-none"
                   placeholder="Motion Title" required>
          </div>

          <div>
            <label class="block mb-1">Description</label>
            <textarea name="description" rows="3"
                      class="w-full p-3 rounded-lg bg-black focus:outline-none"
                      placeholder="Motion Description" required></textarea>
          </div>

          <div class="flex gap-3">
            <button type="submit" class="px-4 py-2 bg-green-600 rounded-lg hover:bg-green-500 transition">Submit</button>
          </div>
        </form>
      </section>

      <!-- Existing Motions -->
      <section class="bg-[#101828] p-6 rounded-2xl shadow-lg">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold">Existing Motion Categories</h2>
          <div class="text-sm text-slate-400"><%= motions.length %> items</div>
        </div>

        <% if (!motions || motions.length === 0) { %>
          <div class="p-6 text-center text-slate-400">No motion categories found.</div>
        <% } else { %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <% motions.forEach(function(m){ %>
              <article class="bg-black p-4 rounded-lg flex flex-col justify-between">
                <div>
                  <h3 class="text-lg font-semibold mb-1"><%= m.title %></h3>
                  <p class="text-sm text-slate-300 mb-3"><%= m.description %></p>
                  <div class="text-xs text-slate-400 break-words">ID: <%= (m._id && m._id.toString) ? m._id.toString() : m._id %></div>

                  <% if (m.motions && m.motions.length) { %>
                    <div class="mt-3">
                      <div class="text-xs text-slate-400 mb-2">Motions (<%= m.motions.length %>):</div>
                      <ul class="text-sm space-y-2">
                        <% m.motions.forEach(function(sub){ %>
                          <li class="bg-gray-900 p-2 rounded">
                            <div class="font-medium"><%= sub.name %></div>
                            <div class="text-xs text-slate-300 truncate" title="<%= sub.body.replace(/\"/g, '&quot;') %>"><%= sub.body.replace(/(<([^>]+)>)/gi, "").slice(0, 120) %></div>
                          </li>
                        <% }) %>
                      </ul>
                    </div>
                  <% } %>
                </div>

                <div class="mt-4 flex items-center gap-2">
                  <a href="/admin/motion/view/<%= m._id %>" class="px-3 py-1 bg-cyan-600 rounded text-sm hover:bg-cyan-500">View</a>

                  <form action="/admin/motion/delete" method="post" class="inline">
                    <input name="id" value="<%= m._id %>" type="text" hidden>
                    <button type="submit" class="px-3 py-1 bg-red-600 rounded text-sm hover:bg-red-500"
                            onclick="return confirm('Delete this motion category?');">
                      Delete
                    </button>
                  </form>
                </div>
              </article>
            <% }) %>
          </div>
        <% } %>
      </section>

    </main>

  </div>

</body>
</html>
