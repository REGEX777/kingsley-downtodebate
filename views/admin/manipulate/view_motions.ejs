<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Motions - Admin Dashboard</title>
  <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-black text-white font-sans antialiased">

  <%- include('../../partials/alerts') -%>

  <div class="min-h-screen flex flex-col md:flex-row">

    <%- include('../_sidebar') -%>


    <!-- Main Content Area -->
    <div class="flex-1 p-8">
      <div class="max-w-4xl mx-auto">
        <header class="mb-8 flex items-center justify-between">
          <h1 class="text-2xl font-semibold">Edit Motion Category</h1>
          <a href="/admin/motion" class="text-sm bg-gray-800 px-4 py-2 rounded-lg hover:bg-gray-700 transition">Back to
            list</a>
        </header>

        <form id="motionEditForm" action="/admin/motion/edit" method="post" class="space-y-6">
          <input type="text" value="<%= motion._id %>" hidden name="id">

          <!-- Title & Description Section -->
          <section class="bg-gray-800 p-6 rounded-2xl shadow-lg">
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium mb-2">Title</label>
                <input name="title" value="<%= motion.title %>"
                  class="w-full p-3 rounded-lg bg-gray-700 border border-gray-600 focus:outline-none focus:border-cyan-500 transition"
                  required>
              </div>

              <div>
                <label class="block text-sm font-medium mb-2">Description</label>
                <textarea name="description" rows="3"
                  class="w-full p-3 rounded-lg bg-gray-700 border border-gray-600 focus:outline-none focus:border-cyan-500 transition"><%= motion.description %></textarea>
              </div>
            </div>
          </section>
          <!-- Action Buttons -->
          <div class="flex items-center gap-3 mt-4">
            <button type="submit"
              class="px-6 py-3 bg-green-600 rounded-lg hover:bg-green-500 transition font-medium">Save Changes</button>
            <a href="/admin/motion"
              class="px-6 py-3 bg-gray-700 rounded-lg hover:bg-gray-600 transition font-medium">Cancel</a>
          </div>
        </form>

        <!-- Motions List Section -->
        <section class="bg-gray-800 p-6 rounded-2xl shadow-lg mt-4">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-lg font-semibold">Motions (<span
                id="motionsCount"><%= (motion.motions || []).length %></span>)</h2>
            <div class="flex items-center gap-2">
              <a href="/admin/motion/category/add/<%= motion._id %>" type="button"
                class="px-4 py-2 bg-cyan-600 rounded-lg hover:bg-cyan-500 transition text-sm">Add Motion</a>
            </div>
          </div>

          <div id="motionsList" class="space-y-4">
            <% (motion.motions || []).forEach(function(m, i) { %>
            <div class="motion-item bg-gray-700 p-4 rounded-lg border border-gray-600" data-index="<%= i %>">
              <div class="flex flex-col md:flex-row items-center md:items-start justify-between gap-4 mb-3">
                <div class="flex items-center gap-3 flex-1">
                  <div
                    class="w-8 h-8 rounded bg-cyan-600 flex items-center justify-center text-white text-sm font-bold">
                    <%= (i+1) %>
                  </div>
                  <div class="flex-1">
                    <div class="text-sm font-semibold motion-display-name"><%= m.name %></div>
                    <div class="text-xs text-slate-400">ID: <%= motion._id.toString() %></div>
                  </div>
                </div>

                <div class="flex items-center gap-2">
                  <a href="/admin/motion/edit/<%= motion._id %>/<%= m._id %>" type="button"
                    class="edit-toggle px-3 py-1 text-sm rounded bg-gray-600 hover:bg-gray-500 transition">Edit</a>
                  <form action="/admin/motion/category/delete" method="post">
                    <input type="text" value="<%= motion._id %>" name="motionCategoryId" hidden>
                    <input type="text" value="<%= m._id %>" name="motionId" hidden>
                    <button type="submit" onclick="confirm(`Are you sure?`)"
                      class="remove-motion px-3 py-1 text-sm rounded bg-red-600 hover:bg-red-500 transition">Delete</button>
                  </form>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </section>


      </div>
    </div>

  </div>


</body>

</html>