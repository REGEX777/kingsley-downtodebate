<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Edit Motion - Admin Dashboard</title>
  <link rel="stylesheet" href="/css/output.css">
  <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
</head>
<body class="bg-black text-white font-sans antialiased">
  <%- include('../../partials/alerts') -%>
  <div class="min-h-screen flex flex-col md:flex-row">
    <%- include('../_sidebar') -%>

    <div class="flex-1 p-8">
      <div class="max-w-4xl mx-auto">
        <header class="mb-8 flex items-center justify-between">
          <h1 class="text-2xl font-semibold">Edit Motion</h1>
          <a href="/admin/motion" class="text-sm bg-gray-800 px-4 py-2 rounded-lg hover:bg-gray-700 transition">Back to list</a>
        </header>
        <form id="motionEditForm" action="/admin/motion/edit/individual" method="post" class="space-y-6">
          <input name="motionId" value="<%= motion._id %>" hidden>
          <input name="categoryId" value="<%= category._id %>" hidden>

          <section class="bg-gray-800 p-6 rounded-2xl shadow-lg">
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium mb-2">Title</label>
                <input name="title" value="<%= motion.name %>" class="w-full p-3 rounded-lg bg-gray-700 border border-gray-600 focus:outline-none focus:border-cyan-500 transition" required>
              </div>

              <div>
                <label class="block text-sm font-medium mb-2">Body</label>
                <div id="editor" class="bg-white text-black rounded-md"></div>
              </div>
            </div>
          </section>

          <input type="hidden" name="original" id="hiddenOriginal">
          <input type="hidden" name="htmlBody" id="hiddenHtmlBody">

          <div class="flex items-center gap-3 mt-4">
            <button type="submit" class="px-6 py-3 bg-green-600 rounded-lg hover:bg-green-500 transition font-medium">Save Changes</button>
            <a href="/admin/motion" class="px-6 py-3 bg-gray-700 rounded-lg hover:bg-gray-600 transition font-medium">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
  <script>
    const existingOriginalString = <%- JSON.stringify(motion && motion.original ? motion.original : '') %>;
    const existingHtmlBody = <%- JSON.stringify(motion && motion.body ? motion.body : '') %>;

    let parsedDelta = null;
    if (existingOriginalString) {
      try { parsedDelta = JSON.parse(existingOriginalString); } catch (e) { parsedDelta = null; }
    }

    const quill = new Quill('#editor', {
      modules: {
        toolbar: [
          ['bold', 'italic', 'underline'],
          ['link', 'blockquote', 'code-block', 'image'],
          [{ list: 'ordered' }, { list: 'bullet' }],
          [{ header: [1, 2, 3, false] }]
        ]
      },
      theme: 'snow'
    });

    if (parsedDelta) {
      if (Array.isArray(parsedDelta)) quill.setContents({ ops: parsedDelta });
      else if (parsedDelta.ops) quill.setContents(parsedDelta);
      else quill.setContents(parsedDelta);
    } else if (existingHtmlBody) {
      quill.clipboard.dangerouslyPasteHTML(existingHtmlBody);
    }

    const form = document.getElementById('motionEditForm');
    form.addEventListener('submit', () => {
      const delta = quill.getContents();
      const ops = delta && delta.ops ? delta.ops : delta;
      document.getElementById('hiddenOriginal').value = JSON.stringify(ops);
      document.getElementById('hiddenHtmlBody').value = quill.root.innerHTML;
    });
  </script>
</body>
</html>
