<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard - newss</title>
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-black text-white font-sans antialiased">

  <%- include('../partials/alerts') -%>

  <div class="min-h-screen flex flex-col md:flex-row">

  <%- include('_sidebar') -%>


    <!-- Main Content -->
    <main class="flex-1 p-8 space-y-8">
              <div class="max-w-4xl mx-auto">
        <header class="mb-8 flex items-center justify-between">
          <h1 class="text-2xl font-semibold">Edit News Update</h1>
          <a href="/admin/news" class="text-sm bg-gray-800 px-4 py-2 rounded-lg hover:bg-gray-700 transition">Back to
            list</a>
        </header>

        <form id="newsEditForm" action="/admin/news/edit" method="post" class="space-y-6">
          <input type="text" value="<%= news._id %>" hidden name="id">

          <!-- Title & Description Section -->
          <section class="bg-gray-800 p-6 rounded-2xl shadow-lg">
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium mb-2">Title</label>
                <input name="title" value="<%= news.title %>"
                  class="w-full p-3 rounded-lg bg-gray-700 border border-gray-600 focus:outline-none focus:border-cyan-500 transition"
                  required>
              </div>

              <div>
                <label class="block text-sm font-medium mb-2">Body</label>
                <textarea name="body" rows="3"
                  class="w-full p-3 rounded-lg bg-gray-700 border border-gray-600 focus:outline-none focus:border-cyan-500 transition"><%= news.body %></textarea>
              </div>
            </div>
          </section>
          <!-- Action Buttons -->
          <div class="flex items-center gap-3 mt-4">
            <button type="submit"
              class="px-6 py-3 bg-green-600 rounded-lg hover:bg-green-500 transition font-medium">Save Changes</button>
            <a href="/admin/news"
              class="px-6 py-3 bg-gray-700 rounded-lg hover:bg-gray-600 transition font-medium">Cancel</a>
          </div>

        <main class="flex-1 space-y-8">
        </main>
        </form>



      </div>
    </main>
  </div>
</body>
</html>