<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>News - Admin Dashboard</title>
  <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-black text-white font-sans antialiased">

  <%- include('../partials/alerts') -%>

  <div class="min-h-screen flex flex-col md:flex-row">

    <%- include('_sidebar') -%>


    <!-- Main Content -->
    <main class="flex-1 p-8 space-y-8">
      <div class="max-w-full mx-auto">


        <form id="newsEditForm" action="/admin/news/new" method="post" class="space-y-6">
          <input type="text" value="" hidden name="id">

          <!-- Title & Description Section -->
          <section class="bg-[#101828] p-6 rounded-2xl shadow-lg">
            <header class="mb-8 flex items-center justify-between">
              <h1 class="text-xl font-semibold">Add A News Update</h1>
            </header>
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium mb-2">Title</label>
                <input name="title" value="" placeholder="Title"
                  class="w-full p-3 rounded-lg bg-black focus:outline-none focus:border-cyan-500 transition"
                  required>
              </div>

              <div>
                <label class="block text-sm font-medium mb-2">Body</label>
                <textarea name="body" rows="3" placeholder="Body"
                  class="w-full p-3 rounded-lg bg-black focus:outline-none focus:border-cyan-500 transition"></textarea>
              </div>
            </div>
            <div class="flex items-center gap-3 mt-4">
              <button type="submit"
                class="px-6 py-3 bg-green-600 rounded-lg hover:bg-green-500 transition font-medium">Save Changes</button>
            </div>
          </section>

        </form>

        <main class="flex-1 space-y-8 mt-4">
          <div class="max-w-full mx-auto">
            <header class="mb-8 flex items-center justify-between">
              <h1 class="text-2xl font-semibold">News List</h1>
            </header>

            <div class="space-y-2">
              <% if (news.length === 0) { %>
              <p class="text-gray-400">No news items found.</p>
              <% } %>

              <% news.forEach(item => { %>
              <div class="bg-[#101828] p-6 rounded-2xl shadow-lg flex justify-between items-start space-x-2">
                <div class="whitespace-normal break-all">
                  <h2 class="text-xl font-semibold mb-2"><%= item.title %></h2>
                  <p class="text-gray-300 mb-2"><%= item.body %></p>
                </div>
                <div class="flex flex-col space-y-2">
                  <a href="/admin/news/edit/<%= item._id %>"
                    class="text-sm bg-cyan-600 px-3 py-1 rounded-lg hover:bg-cyan-500 transition text-center">Edit</a>
                  <form action="/admin/news/delete" method="POST"
                    onsubmit="return confirm('Are you sure you want to delete this news?');">
                    <input type="text" value="<%= item._id %>" name="id" hidden>
                    <button type="submit"
                      class="text-sm bg-red-600 px-3 py-1 rounded-lg hover:bg-red-500 transition w-full">Delete</button>
                  </form>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </main>



      </div>
    </main>
  </div>
</body>

</html>